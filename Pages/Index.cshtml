@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<style>
    img {
        width: 100%;
        height: auto;
    }
</style>

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
    <ul class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ul>

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/hotel.jpg" alt="hotel outlook" />
            <div class="carousel-caption">
                <h3>
                    Outlook Of Hotel
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/room.jpg" alt="hotel room" />
            <div class="carousel-caption">
                <h3>
                   Hotel Room
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/bathroom.jpg" alt="bathroom" />
            <div class="carousel-caption">
                <h3>
                    Bathroom
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/dining.jpg" alt="dining" />
            <div class="carousel-caption">
                <h3>
                    Dining
                </h3>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
</div>

<br />

<div class="row">
    <div class="col-md-8">
        <h3>Welcome to Three Sisters Hotel</h3>
    </div>
    <div class="col-md-4">
        <h2 class="text-center">Useful Links</h2>
        <ul>
            <li><a asp-area="" asp-page="/Index">Home</a></li>
            <li><a asp-area="" asp-page="/Privacy">Katoomba weather</a></li>
            <li><a asp-area="" asp-page="/Privacy">Blue Mountains City Council</a></li>
        </ul>
    </div>
</div>
